<div class="container">
  <div class="main-content">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-title">
          <h2><%= @post.title %></h2>
        </div>
        <div class="post-body">
          <p><%= raw(@post.body) %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="actions text-center">
    <a class="btn btn-default" href="/">See all posts</a>
  </div>
</div>

