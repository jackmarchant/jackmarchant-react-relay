<div class="container main-content">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <!-- posts -->
          <% @posts.each do |post| %>
            <div class="post-preview">
              <%= link_to post_path(post) do %>
                <h2 class="post-title">
                  <%= post.title %>
                </h2>
              <% end %>
              <p class="post-meta"><%=h truncate(post.body, :length => 140) %></p>
            </div>
            <hr>
          <% end %>
        <!-- // posts -->

          <ul class="pager">
            <li class="next">
              <a href="#">Older Posts &rarr;</a>
            </li>
          </ul>
        </div>
    </div>
</div>
