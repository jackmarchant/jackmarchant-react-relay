{
  "name": "jackmarchant",
  "version": "1.0.0",
  "private": true,
  "description": "Jack Marchant's Personal Website",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node ./scripts/test.js",
    "test:coverage": "yarn test -- --coverage",
    "lint": "./node_modules/.bin/eslint src/**",
    "build": "yarn lint && yarn ci",
    "ci": "./node_modules/.bin/webpack -p --config config/webpack.config.prod.js",
    "exdev": "./node_modules/.bin/webpack -w --config config/webpack.config.exdev.js",
    "prettier": "node ./scripts/prettier.js write-changed",
    "prettier-all": "node ./scripts/prettier.js write",
    "precommit": "lint-staged",
    "relay": "relay-compiler --src ./src/ --schema ./schema.json --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackmarcahnt/jackmarchant.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/expert360/ulyanov/issues"
  },
  "homepage": "https://github.com/expert360/ulyanov#readme",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 4 versions",
              "ie >= 9"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "relay",
      "transform-react-jsx",
      [
        "transform-class-properties",
        {
          "spec": true
        }
      ],
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$",
    "coveragePathIgnorePatterns": [
      ".graphql$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.0.0",
    "babel-plugin-relay": "^1.2.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "^1.5.2",
    "classnames": "2.2.5",
    "history": "^4.6.2",
    "lodash": "4.17.4",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-relay": "^1.2.0",
    "react-router-dom": "4.1.1",
    "relay-runtime": "^1.2.0",
    "webpack": "^2.6.1"
  },
  "devDependencies": {
    "enzyme": "2.8.2",
    "eslint": "3.19.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "2.28.0",
    "husky": "0.13.4",
    "jest": "^20.0.4",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^3.6.1",
    "prettier": "^1.4.4",
    "prettier-eslint": "^6.3.0",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "relay-compiler": "^1.2.0",
    "webpack-dev-server": "2.4.5"
  },
  "lint-staged": {
    "gitDir": "../",
    "linters": {
      "*.{js}": [
        "yarn prettier",
        "git add"
      ]
    }
  }
}
